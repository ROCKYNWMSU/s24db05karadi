extends layout
 
block content
  h1= title
  a.btn.btn-primary(href="/earphones/create") Create 
  - let items = results;
  
  div(class="container-fluid")
  div(class="row m-1")
    each item in items
      - let destination = `dispatch(\"/earphones/update?id=${item._id}\")`
      - let detail = `dispatch(\"/earphones/detail?id=${item._id}\")`
      - let earphonesdelete = `dispatch(\"/earphones/delete?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item: #{item.brand}(#{item.size}) is #{item.cost}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      button.btn( class="btn-primary ml-1", onclick= detail) detail
      button.btn( class="btn-primary ml-1", onclick= earphonesdelete) delete
  script.
    function dispatch(path){
      window.location.href=path}